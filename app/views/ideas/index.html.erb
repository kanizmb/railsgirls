<h1><i class="fa fa-github-alt"></i> Listing ideas</h1>

<table>
  <thead>
    <tr>
      <th class="h-idea-name">Name</th>
      <th class="h-idea-desc">Description</th>
      <th class="h-idea-thumb">Picture</th>
      <th colspan="3" class="h-edit-btn"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= link_to idea.name, idea %><span class="create_date"><%= l(idea.created_at, format: :long)  %></span></td>
        <td><%= idea.description %></td>
        <td><%= link_to image_tag(idea.picture_url(:thumbnail), width: 100) , idea if idea.picture.present? %>
          <% if idea.picture.blank? %><img src="/images/noImage_thumb.png" alt="no image"><% end %></td>
        <td><%= link_to 'Show', idea, class: 'link-btn btn-show' %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea), class: 'link-btn btn-edit' %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, class: 'link-btn btn-delete', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Idea', new_idea_path, class: 'add-new-idea' %>
